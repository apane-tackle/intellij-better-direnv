<idea-plugin>
    <depends>com.jetbrains.sh</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Direnv File"
                implementationClass="com.fapiko.jetbrains.plugins.better_direnv.language.filetype.DirenvFileType"
                fieldName="INSTANCE"
                language="Shell Script"
                patterns=".envrc;.envrc.*"/>
    </extensions>
</idea-plugin>
